<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" android:orientation="vertical"
    tools:showIn="@layout/activity_main"  android:focusable="true"
    android:focusableInTouchMode="true" android:layout_marginTop="100dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" android:orientation="horizontal"
        tools:showIn="@layout/activity_main"  android:focusable="true"
        android:focusableInTouchMode="true">

        <!--TextView android:text="Hello World!" android:layout_width="wrap_content"
            android:layout_height="wrap_content" /-->
        <TextView android:id="@+id/myip" android:textColor="#ffffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"  android:text="IP" />
        <EditText android:id="@+id/edit_ip"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="ip" />

    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" android:orientation="horizontal"
        tools:showIn="@layout/activity_main"  android:focusable="true"
        android:focusableInTouchMode="true">

        <!--TextView android:text="Hello World!" android:layout_width="wrap_content"
            android:layout_height="wrap_content" /-->
        <TextView android:id="@+id/myport" android:textColor="#ffffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"  android:text="Port" />
        <EditText android:id="@+id/edit_port"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="port" />
    </LinearLayout>
    <Button android:id="@+id/myOKbtn"
        android:layout_width="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
        android:layout_height="wrap_content" android:layout_marginBottom="25dp"
        android:text="省份" android:background="@mipmap/btncity"
        android:onClick="settinghandle"
        />
</LinearLayout>
